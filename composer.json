{
    "name": "dive-be/laravel-expo-channel",
    "description": "Expo Notifications Channel for Laravel",
    "keywords": [
        "dive",
        "laravel",
        "notifications",
        "expo",
        "exponent",
        "react-native"
    ],
    "homepage": "https://github.com/dive-be/laravel-expo-channel",
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammed Sari",
            "email": "muhammed@dive.be",
            "homepage": "https://dive.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "illuminate/http": "^9.0",
        "illuminate/notifications": "^9.0",
        "illuminate/support": "^9.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.10",
        "nunomaduro/larastan": "^2.1",
        "orchestra/testbench": "^7.7",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Expo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "larastan": "vendor/bin/phpstan analyse --memory-limit=2G",
        "format": "vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php --allow-risky=yes",
        "test": "vendor/bin/pest",
        "verify": "@composer larastan && composer test"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "NotificationChannels\\Expo\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
